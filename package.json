{
  "name": "electro-stock",
  "private": true,
  "version": "1.0.0",
  "description": "Sistema de Gesti√≥n de Stock Offline",
  "author": "ElectroStock",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development wait-on http://localhost:5173 && electron .",
    "build": "vite build --outDir dist-react",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --win",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "jsbarcode": "^3.12.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.electrostock.app",
    "productName": "ElectroStock",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-react/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
